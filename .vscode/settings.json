{
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.insertSpaces": false,
	"files.eol": "\n",
	"cSpell.words": [
		"buble",
		"builtins",
		"combinator",
		"comms",
		"cpuabuse",
		"errored",
		"jscc",
		"loglevel",
		"vuex",
		"pixi",
		"tock",
		"destructure",
		"destructured",
		"endregion",
		"trit",
		"vsocket",
		"bivariance",
		"bivariant",
		"onwarn"
	],
	"yaml.schemas": {
		"./schema/dt.yml.json": ["*.dt.yml"]
	},
	"files.associations": {
		"*.azure-pipelines.yml": "azure-pipelines"
	},
	"eslint.probe": ["typescript", "html", "vue"],
	"vetur.validation.templateProps": true,
	"editor.semanticTokenColorCustomizations": {
		"enabled": true,
		"rules": { "typeParameter": "#22AA22" }
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"liveServer.settings.NoBrowser": true,
	"liveServer.settings.port": 5500,
	"liveServer.settings.ignoreFiles": ["**"],
	"vscode-edge-devtools.timeout": 100000,
	"[typescript]": {
		// Overrides prettier extensions, so that it does not auto-format conditional compilation directives
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	}
}
