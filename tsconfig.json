{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"lib": ["ES2022", "DOM"],
		"module": "ES2022",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"target": "ES2022",
		/* From pixi, affects assets script compilation - https://github.com/DefinitelyTyped/DefinitelyTyped/discussions/64302 */
		"skipLibCheck": true,
		/* Will be auto-imported and renamed by Vite's plugin */
		"jsxFactory": "vueJsxPragma"
	},
	"include": ["src/**/*", "test/**/*", "src/**/*.vue", "test/**/*.vue", "**/*vite.config.ts"]
}
