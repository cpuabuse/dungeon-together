{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["es2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "build/dev",
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020"
	},
	"typedocOptions": {
		"mode": "modules",
		"out": "docs"
	},
	"include": ["**/*"],
	"exclude": ["build/**/*"]
}
