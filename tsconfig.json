{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"lib": ["ES2022", "DOM"],
		/* TS rollup lib doesn't support ES2022 */
		"module": "ES2020",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strict": true,
		"target": "ES2022"
	},
	"include": ["src/**/*", "test/**/*", "src/**/*.vue", "test/**/*.vue"]
}
